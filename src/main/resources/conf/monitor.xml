<monitor>
        <name>VMWareAppDTag</name>
        <type>managed</type>
        <description>VMWare AppD Tag</description>
        <monitor-configuration></monitor-configuration>
        <monitor-run-task>
                <execution-style>scheduled</execution-style>
                <name>VMWare AppD Tag Run Task</name>
                <display-name>VMWare AppD Tag Task</display-name>
                <description>VMWare AppD Tag Task</description>
                <type>java</type>
                <task-arguments>
                        <argument name="config-file" is-required="true"
                                default-value="monitors/VMWareTagExtension/config.yml" />
                        <argument name="metric-file" is-required="true"
                                default-value="monitors/VMWareTagExtension/metrics.xml" />
                </task-arguments>
                <java-task>
                        <classpath>vwmare-tag-extension.jar</classpath>
                        <impl-class>com.appdynamics.extensions.vmwaretag.VMWareTagExtension</impl-class>
                </java-task>
        </monitor-run-task>
</monitor>